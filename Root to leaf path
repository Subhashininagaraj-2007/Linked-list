class Solution {
        static void getPaths(Node root, ArrayList<ArrayList<Integer>> result, ArrayList<Integer> path) {
        if (root == null) {
            return;
        }
        if (root.left == null && root.right == null) {
            path.add(root.data);
            ArrayList<Integer> finalPath = new ArrayList<>(path);
            result.add(finalPath);
            path.remove(path.size() - 1);
            return;
        }
        
        path.add(root.data);
        getPaths(root.left, result, path);
        getPaths(root.right, result, path);
        path.remove(path.size() - 1);
    }
      
    public static ArrayList<ArrayList<Integer>> Paths(Node root) {
        ArrayList<ArrayList<Integer>> result = new ArrayList<>();
        ArrayList<Integer> path = new ArrayList<>();
        getPaths(root, result, path);
        return result;
    }
}
